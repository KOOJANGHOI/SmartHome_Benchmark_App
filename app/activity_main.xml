<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context="com.example.ali.control.MainActivity"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/Button_Able"
            android:text="Able"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/Button_Disable"
            android:text="Disable"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/all_alarm_status"
            android:text=" "/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Room #1"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="30sp"
                android:id="@+id/room1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="Sen1"
                    android:id="@+id/sen1"
                    android:background="#FFFFFF"/>

                <Switch
                    android:id="@+id/r1sen1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="Sen2"
                    android:id="@+id/sen2"
                    android:background="#FFFFFF"/>

                <Switch
                    android:id="@+id/r1sen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Room #2"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="30sp"
                android:id="@+id/room2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="Cam1"
                    android:id="@+id/cam1"
                    android:background="#FFFFFF"/>

                <Switch
                    android:id="@+id/r2cam1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="Sen3"
                    android:id="@+id/sen3"
                    android:background="#FFFFFF"/>

                <Switch
                    android:id="@+id/r2sen3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>




</LinearLayout>


